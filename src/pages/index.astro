---
import "../styles/style.css";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Posts from "../components/Posts.astro";
import Pagination from "../components/Pagination.astro";

const posts = await Astro.glob("../pages/posts/*.md");
const sortedPosts = posts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
const firstPage = sortedPosts.slice(0, 3);
---

<html lang="en">
	<Head title="Chris van Dal" />

	<body>
		<main class="container">
			<Header />

			<Posts posts={firstPage} />

			<Pagination prevUrl="" nextUrl="/posts/2" />
		</main>

		<Footer />
	</body>
</html>
